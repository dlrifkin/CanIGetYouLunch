<div id="login-toolbar">
  <a href="/"><img src="/img/lunch.jpg" class="logo"></a>

  <% if current_user %>
    <h3>Hi there, <%= current_user.name %>!!! </h3>
    <a href="/logout" id="logout">Logout</a>
  <% else %>
    <a href="/login">Log in</a>
    or <a href="/signup">Sign up</a> if you want to eat!
  <% end %>
</div>
